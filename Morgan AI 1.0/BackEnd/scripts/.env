# Application Settings
APP_NAME=Morgan AI Chatbot
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=morgan-ai-knowledge

# Security
SECRET_KEY=your_super_secret_jwt_key_generate_random_string_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2b$12$your_bcrypt_hashed_password_here

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# Database Settings (if using PostgreSQL for thread storage)
# DATABASE_URL=postgresql://username:password@localhost:5432/morgan_ai

# Chat Settings
MAX_THREAD_HISTORY=50
MAX_RESPONSE_TOKENS=500
CHAT_TEMPERATURE=0.7

# Voice Settings
ENABLE_VOICE_FEATURES=True
TTS_VOICE=alloy

# Knowledge Base
KNOWLEDGE_BASE_PATH=data/knowledge_base
TRAINING_DATA_FILE=training_data.txt

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Production Settings (uncomment and modify for production deployment)
# DEBUG=False
# ALLOWED_ORIGINS=["https://your-frontend-domain.com","https://morgan-ai.morgan.edu"]
# DATABASE_URL=postgresql://prod_user:prod_password@db:5432/morgan_ai_prod